{
    "compilerOptions":
    {
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "module": "CommonJS",

        "baseUrl": "./",
        "rootDir": "src",
        "paths": { "src/*": ["src/*"] }
    },

    "include": ["src/**/*"],

    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
}